<section class="messages-wrapper text-light p-5">

</section>

<script>
fetch('api/messages/')
  .then(response => response.json())
  .then(messages => {
    messages.forEach(m=>{
      let el = document.createElement("div");
      el.classList.add("bg-blue-gray","p-1", "m-1")
      el.innerHTML = m.message;
      document.querySelector(".messages-wrapper").append(el);
    })
  })
  .catch(err => console.error(err));
</script>
